{
    "functions": {
      "source": "functions-avantar"
    },
    "firestore": {
      "indexes": "functions-avantar/firestore.indexes.json"
    },
    "hosting": {
      "public": "public",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "/indicar/confirmar",
          "destination": "/indicar/confirmar.html"
        }
      ],
      "headers": [
        {
          "source": "**/*.html",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public, max-age=0, must-revalidate"
            }
          ]
        }
      ]
    }
  }
  